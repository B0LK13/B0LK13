{
  "name": "nextjs-blog-theme",
  "type": "module",
  "description": "A customizable Next.js and Tailwind blog starter. Designed by the Bejamas agency.",
  "author": "Bejamas and Netlify Inc.",
  "contributors": [
    "Charlie Gerard",
    "Prince Wilson",
    "Tara Manicsic",
    "Thom Krupa",
    "Tomas Bankauskas"
  ],
  "homepage": "https://github.com/netlify-templates/nextjs-blog-theme",
  "bugs": {
    "url": "https://github.com/netlify-templates/nextjs-blog-theme/issues"
  },
  "scripts": {
    "dev": "next",
    "dev:watch": "next-remote-watch ./posts",
    "build": "next build",
    "start": "next start",
    "export": "next build && next export",
    "lint": "next lint",
    "email": "node scripts/email-cli.js",
    "email:setup": "node scripts/email-cli.js setup",
    "email:create": "node scripts/email-cli.js create",
    "email:list": "node scripts/email-cli.js list",
    "email:logs": "node scripts/email-cli.js logs",
    "cloudflare:setup": "node scripts/setup-cloudflare.js",
    "worker:deploy": "npx wrangler deploy",
    "worker:dev": "npx wrangler dev",
    "db:migrate": "npx wrangler d1 execute email-routing-db --file=workers/schema.sql"
  },
  "bin": {
    "email-cli": "./scripts/email-cli.js"
  },
  "dependencies": {
    "@mapbox/rehype-prism": "^0.9.0",
    "@octokit/rest": "^22.0.0",
    "@tailwindcss/typography": "^0.5.12",
    "chalk": "^5.3.0",
    "classnames": "^2.3.1",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "googleapis": "^154.1.0",
    "gray-matter": "^4.0.3",
    "inquirer": "^9.2.12",
    "next": "^15.1.4",
    "next-mdx-remote": "^5.0.0",
    "next-remote-watch": "2.0.0",
    "openai": "^5.11.0",
    "ora": "^7.0.1",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype-unwrap-images": "^1.0.0",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@stackbit/cms-git": "^1.0.32",
    "@stackbit/types": "^2.0.1",
    "@tailwindcss/postcss": "^4.0.16",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.1.4",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^4.0.16",
    "typescript": "^5.1.3",
    "wrangler": "^3.78.12"
  },
  "license": "MIT"
}
