# Environment Configuration Template
# Copy this file to .env and fill in your values

# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# Graph Database
NEO4J_URI=neo4j://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# Vector Database
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=cea-contexts

# Alternative: Weaviate
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your_weaviate_api_key

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# CEA Configuration
CEA_LOG_LEVEL=INFO
CEA_MAX_CONTEXTS=20
CEA_DEFAULT_COMPRESSION_THRESHOLD=0.8
CEA_ENABLE_GRAPH_AUGMENTATION=true
CEA_ENABLE_DRIFT_DETECTION=true

# Performance
CEA_REQUEST_TIMEOUT=30
CEA_MAX_CONCURRENT_REQUESTS=10
CEA_CACHE_TTL=3600

# Security
CEA_API_KEY=your_cea_api_key_for_authentication
CEA_ALLOWED_ORIGINS=http://localhost:3000,https://your-app.com

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Development
DEBUG=false
ENVIRONMENT=development
